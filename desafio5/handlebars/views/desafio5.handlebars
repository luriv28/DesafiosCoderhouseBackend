<div class="container mt-3">
    <div class="jumbotron">
        <h1 style="color:blue;">Add product</h1>
        <br>

        <form action="/productos" method="post">

            <div class="form-group">
                <label for="title"><b>Titulo</b></label>
                <input id="title" class="form-control" type="text" name="title">
            </div>

            <div class="form-group">
                <label for="price"><b>Price</b></label>
                <input id="price" class="form-control" type="text" name="price">
            </div>

            <div class="form-group">
                <label for="thumbnail"><b>Thumbnail</b></label>
                <input id="thumbnail" class="form-control" type="text" name="thumbnail">
            </div>

            <button class="btn btn-success mt-3 mb-5">Send</button>
        </form>

        <h2 style="color:crimson;">Historial</h2>

        {{#if productos.length}}
        <div class="table-responsive">
            <table class="table table-dark">
                <tr style="color: yellow;">
                    <th>Title</th>
                    <th>Price</th>
                    <th>Thumbnail</th>
                </tr>

                {{#each productos}}
                <tr>
                    <td>
                        {{this.title}}
                    </td>
                    <td>
                        {{this.price}}
                    </td>
                    <td>
                        <img style="width: 60px" src="{{this.thumbnail}}" alt="{{this.title}}">
                    </td>
                </tr>
                {{/each}}
            </table>
        </div>
        {{else}}
        <h3 class="alert alert-danger">No products</h3>
        {{/if}}
    </div>
</div>